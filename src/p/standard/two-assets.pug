---js
{
  img1_width: 520,
  img1_height: 293,
  img2_width: 520,
  img2_height: 402,
  copy1_characters: 1000,
  copy1_paragraphs: 3,
}
---

extends /layout.pug

block vars
  - var panel_class = "two-assets"

block content
  .container-outer
    .container-inner
      include /panel-header--standard.pug
      .panel-card
        .column-one
          .blurb
            h3 #{lorem.secondary_header}
            +insertParagraphs(copy1_characters, copy1_paragraphs)
        .column-two
          .image
            +placeholderImg(img1_width, img1_height, "img-responsive")
          .image
            +placeholderImg(img2_width, img2_height, "img-responsive")
      include /panel-indicators.pug
    include /panel-arrows.pug
